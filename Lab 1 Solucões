    currentyear = 2020;

    cout << "First Name: ";
    cin >> nome;
    cout << "Last Name: ";
    cin >> apelido;
    cout << "Age: ";
    cin >> idade;
    ano = currentyear - idade;

    cout << endl;
    cout << "Hello, " << nome << " " << apelido << " ! You were born in " << ano;

    return 0;
}
